<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_anchorGravity="center_horizontal"
    tools:context=".fragments.SendIncFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="234dp" />

        <Button
            android:id="@+id/btnChoosePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D53232"
            android:text="Выбрать картинку" />

        <EditText
            android:id="@+id/edtIncDiscription"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:ems="10"
            android:hint="Введите описание инцидента"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSendInc"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="Отправить инцидент"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>